<div class='content-wrapper'>
  <div class='content-navigation'>
    <p class='lead'>Ember workShop</p>
    {{#each uniqCategories as |category| }}
      {{#link-to 'products' (query-params category=category.name) class='list-group-item'}}{{category.name}}<small> ({{category.products.length}})</small>{{/link-to}}
    {{/each}}

  </div>  <!-- /.content-navigation -->

  <div class='content-main'>
    {{partial 'carousel'}}
    <div class='products'>
    {{#each filteredContent as |product|}}
      <div class='product'>
        <div class='thumbnail {{if product.hasDirtyAttributes 'is-dirty'}}'>
          <img src={{product.image}} alt=''>
          <div class='caption'>
            <h4 class='pull-right'>${{product.price}}</h4>
            <p class='badge'>{{product.categoryName}}</p>
            <h4>{{#link-to 'products.show' product}}{{product.title}}{{/link-to}}</h4>
            <p>{{product.description}}</p>
          </div>
          <div class='ratings'>
            <p class='pull-right'>15 reviews</p>
            <p>
            <span class='glyphicon glyphicon-star'></span>
            <span class='glyphicon glyphicon-star'></span>
            <span class='glyphicon glyphicon-star'></span>
            <span class='glyphicon glyphicon-star'></span>
            <span class='glyphicon glyphicon-star'></span>
            </p>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>  <!-- /.content-main -->

  <div class='content-detail'>
    {{outlet}}
  </div>
</div>  <!-- /.content-wrapper -->
